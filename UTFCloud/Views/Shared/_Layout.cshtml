<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/content/bootstrap.css")" rel="stylesheet" />
    <link href="@Url.Content("~/content/bootstrap-select.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand col-xs-9" href="#"><b>UTFCloud</b></a>
                </div>

               
                
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="col-xs-9"> @Html.Partial("~/Views/Arquivos/_PartialPapelariaBuscaPanel.cshtml")</div>
                    }
                    <ul class="nav navbar-nav navbar-right">
                        
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li>
                                <a href="@Url.Action("Create", "Arquivos")">
                                    <i class="glyphicon glyphicon-plus">
                                    </i>
                                    <p>Adicionar</p>
                                </a>
                            </li>

                            <li>
                                <a href="@Url.Action("Papelaria", "Arquivos")">
                                    <i class="glyphicon glyphicon-print">
                                    </i>
                                    <p>Papelaria</p>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a href="@Url.Action("Edit", "Admin")">
                                    <i class="glyphicon glyphicon-lock">
                                    </i>
                                    <p>Área Admnistativa</p>
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Logout", "Account")">
                                    <i class="glyphicon glyphicon-off">
                                    </i>
                                    <p>Sair</p>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
        <div class="container">
            <div class="row">
                <div class="col-xs-9 col-md-11">
                    <br /> @RenderBody()
                </div>
            </div> <br />
            <div class="row">
            </div>
        </div> 



    <script src="@Url.Content( "~/scripts/jquery-3.1.1.js")"></script> 
    <script src="@Url.Content( "~/scripts/bootstrap.js")"></script>
    <script src="@Url.Content( "~/scripts/bootstrap-select.js")"></script>

    @RenderSection("ScriptPage", false);

</body>
</html>